<div class="professor">
  
  <h2>Logged in as {{ username }}</h2>
<!-- need to display user information here -->
  <ul style="list-style-type:none;">
  	<li>First Name: {{ firstname }}</li>
    <li>Last Name: {{ lastname }}</li>
    <li>Email: {{ email }}</li>
    <li>Phone: {{ phone }}</li>
  </ul>
<!-- List of courses and buttons to sort -->
  <br>
  <h2>Courses List</h2>
  <br>
  <ul class="courses_list">
    {{#each course}}
      <li>{{name}}</li>
      <form id='sort_form' method='POST' action='/dashboard'>
        <button type='Submit' value='Sort Groups'>Sort Groups</button>
        {{#if error}}
          <p class='error'>{{error}}</p>
        {{/if}}
      </form>
    {{/each}}
  </ul>
	<p>Log out <a href="http://localhost:3000/logout">here.</a></p>
  
</div>
